{% extends "layout_header.njk" %}

{% block header %}
    <header>
        <img src="content/brand.png" alt="brand" id="brand">
        <div id="links">
            <a href="homepage.html" class="header_link">Home</a>
            <a href="personal_page.html" class="header_link">Profile</a>
            <a href="about.html" class="header_link">About</a>
            <a href="contact.html" class="header_link">Contact</a>
        </div>

        <a hidden href="cart.html"><img src="content/shopping-cart.png" alt="" id="cart_pic"></a>
        <form action="POST" id="search_form">
            <input hidden type="search" name="s" id="search" placeholder="Search something here!">
        </form>

        <img src="content/sa.png" alt="flag" class="currency" id="curimg" hidden>
        <select name="curr" id="currencyBox" hidden>
            <option value="SAR" selected>SAR</option>
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="JPY">JPY</option>
        </select>

        <div id="buttons">
              <button id="createPost" hidden>Create Post</button>
              <button id="login">Login</button>
        </div>   
    </header>
{% endblock %}


{% block content %}
    <div class="small" style="z-index: -1;"></div>
        <div class="big" style="z-index: -1;"></div>
        <img src="content\steps.png" class="steps">
        <!--<img src="content\brand.png" class="brand">--> <!-- Comment this if you want to remove the brand name-->

        <div class="form-container">
            <div>
                <img src="content\brand.png" class="login-brand">
            </div>
            <div class="login-container">
                <label for="username-email">Username or Email</label>
                <input type="text" name="username-email" id="username-email">

                <div class="space-between-fields"></div>

                <label for="password">Password</label>
                <input type="password" name="password" id="password">
                <div><a href="" id ="forget-your-password">Forget your password?</a></div>
                <div><button id="login-button">Log In</button></div>
                <div><p id="new-user-text">New user?</p></div>
                <button id="goto-register-button">Register</button>
            </div>
        </div>
    </div>
{% endblock %}